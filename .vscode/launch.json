{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run SlashMD Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension-host",
        "--profile-temp"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/extension-host/dist/**/*.js"
      ],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Run SlashMD Extension (no build)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension-host",
        "--profile-temp"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/extension-host/dist/**/*.js"
      ]
    }
  ]
}
