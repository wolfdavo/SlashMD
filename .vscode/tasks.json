{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "${workspaceFolder}:build-extension",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/packages/extension-host"
      },
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": "$tsc"
    }
  ]
}