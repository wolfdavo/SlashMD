{
  "name": "slashmd",
  "displayName": "SlashMD — Block-Based Markdown",
  "publisher": "slashmd",
  "version": "0.0.1",
  "description": "Transform your Markdown editing with intuitive block-based WYSIWYG editor while keeping files as standard Markdown",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other", "Editors", "Formatters"],
  "keywords": ["markdown", "editor", "blocks", "wysiwyg", "notion", "block-editor", "visual-editor"],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/slashmd.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/slashmd/issues"
  },
  "homepage": "https://github.com/your-username/slashmd#readme",
  "license": "MIT",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:markdown",
    "onCustomEditor:slashmd.editor"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "slashmd.editor",
        "displayName": "SlashMD — Block-Based Markdown",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "slashmd.openAsText",
        "title": "Open as Raw Markdown",
        "icon": "$(edit)"
      },
      {
        "command": "slashmd.insertBlock",
        "title": "Insert Block...",
        "icon": "$(add)"
      },
      {
        "command": "slashmd.toggleDefault",
        "title": "Make SlashMD Default for Markdown"
      },
      {
        "command": "slashmd.importImage",
        "title": "Import Image to Assets Folder",
        "icon": "$(file-media)"
      },
      {
        "command": "slashmd.showAssetStats",
        "title": "Show Asset Statistics"
      },
      {
        "command": "slashmd.openAssetsFolder",
        "title": "Open Assets Folder",
        "icon": "$(folder)"
      },
      {
        "command": "slashmd.openSettings",
        "title": "Open SlashMD Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "slashmd.resetSettings",
        "title": "Reset SlashMD Settings to Defaults"
      },
      {
        "command": "slashmd.showInfo",
        "title": "Show SlashMD Information",
        "icon": "$(info)"
      },
      {
        "command": "slashmd.reloadExtension",
        "title": "Reload SlashMD Extension"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "slashmd.openAsText",
          "when": "activeCustomEditorId == slashmd.editor",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "slashmd.openAsText",
          "when": "editorLangId == markdown"
        },
        {
          "command": "slashmd.insertBlock",
          "when": "editorLangId == markdown"
        }
      ],
      "explorer/context": [
        {
          "command": "slashmd.openAssetsFolder",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace"
        }
      ]
    },
    "configuration": {
      "title": "SlashMD",
      "properties": {
        "slashmd.assets.folder": {
          "type": "string",
          "default": "assets",
          "description": "Relative folder for pasted/dragged images"
        },
        "slashmd.format.wrap": {
          "type": "integer",
          "default": 0,
          "description": "Markdown wrap width (0 = no wrap)"
        },
        "slashmd.callouts.style": {
          "type": "string",
          "enum": ["admonition", "emoji"],
          "default": "admonition",
          "description": "Callout syntax style"
        },
        "slashmd.toggles.syntax": {
          "type": "string",
          "enum": ["details", "list"],
          "default": "details",
          "description": "Toggle syntax preference"
        },
        "slashmd.theme.density": {
          "type": "string",
          "enum": ["compact", "comfortable"],
          "default": "comfortable",
          "description": "Theme density"
        },
        "slashmd.math.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Whether to enable math rendering"
        },
        "slashmd.mermaid.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Whether to enable Mermaid diagrams"
        },
        "slashmd.showLineNumbers": {
          "type": "boolean",
          "default": false,
          "description": "Whether to show line numbers in code blocks"
        }
      }
    }
  },
  "dependencies": {
    "@slashmd/md-mapper": "0.4.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.15.0"
  }
}