{
  "name": "slashmd",
  "icon": "media/icon.png",
  "displayName": "SlashMD — Block-Based Markdown",
  "description": "A Notion-like block-based WYSIWYG editor for Markdown files",
  "publisher": "slashmd",
  "galleryBanner": {
    "color": "#161617",
    "theme": "dark"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "wysiwyg",
    "notion",
    "block-editor",
    "md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wolfdavo/SlashMD"
  },
  "bugs": {
    "url": "https://github.com/wolfdavo/SlashMD/issues"
  },
  "homepage": "https://github.com/wolfdavo/SlashMD#readme",
  "license": "MIT",
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "customEditors": [
      {
        "viewType": "slashmd.editor",
        "displayName": "SlashMD — Block-Based Markdown",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "slashmd.openAsText",
        "title": "Open as Raw Markdown",
        "category": "SlashMD",
        "icon": {
          "light": "media/code-light.svg",
          "dark": "media/code-dark.svg"
        }
      },
      {
        "command": "slashmd.openAsSlashMD",
        "title": "Open as SlashMD",
        "category": "SlashMD",
        "icon": {
          "light": "media/blocks-light.svg",
          "dark": "media/blocks-dark.svg"
        }
      },
      {
        "command": "slashmd.copyContent",
        "title": "Copy Markdown Content",
        "category": "SlashMD",
        "icon": {
          "light": "media/copy-light.svg",
          "dark": "media/copy-dark.svg"
        }
      },
      {
        "command": "slashmd.insertBlock",
        "title": "Insert Block…",
        "category": "SlashMD"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "slashmd.copyContent",
          "when": "activeCustomEditorId == slashmd.editor",
          "group": "navigation"
        },
        {
          "command": "slashmd.openAsText",
          "when": "activeCustomEditorId == slashmd.editor",
          "group": "navigation"
        },
        {
          "command": "slashmd.copyContent",
          "when": "resourceLangId == markdown && activeCustomEditorId != slashmd.editor",
          "group": "navigation"
        },
        {
          "command": "slashmd.openAsSlashMD",
          "when": "resourceLangId == markdown && activeCustomEditorId != slashmd.editor",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "SlashMD",
      "properties": {
        "slashmd.assets.folder": {
          "type": "string",
          "default": "assets",
          "description": "Relative folder for pasted/dragged images."
        },
        "slashmd.format.wrap": {
          "type": "integer",
          "default": 0,
          "description": "Markdown wrap width (0 = no wrap)."
        },
        "slashmd.callouts.style": {
          "type": "string",
          "enum": [
            "admonition",
            "emoji"
          ],
          "default": "admonition",
          "description": "Style for callout blocks."
        },
        "slashmd.toggles.syntax": {
          "type": "string",
          "enum": [
            "details",
            "list"
          ],
          "default": "details",
          "description": "Syntax for toggle blocks."
        },
        "slashmd.math.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable math block support."
        },
        "slashmd.mermaid.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Mermaid diagram support."
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/extension.ts --format cjs --dts --outDir dist --external vscode",
    "dev": "tsup src/extension.ts --format cjs --watch --outDir dist --external vscode",
    "lint": "eslint src",
    "package": "rm -rf .vsce-pkg && mkdir -p .vsce-pkg && cp -r package.json LICENSE dist media .vsce-pkg/ && rm -f .vsce-pkg/dist/*.map && cd .vsce-pkg && vsce package --no-dependencies -o ../slashmd.vsix && cd .. && rm -rf .vsce-pkg",
    "publish": "npm run package && vsce publish --packagePath slashmd.vsix",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "zod": "^4.1.13"
  }
}
