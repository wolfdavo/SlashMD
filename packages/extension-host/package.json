{
  "name": "slashmd",
  "icon": "media/icon.png",
  "displayName": "SlashMD — Block-Based Markdown",
  "description": "A Notion-like block-based WYSIWYG editor for Markdown files",
  "publisher": "slashmd",
  "galleryBanner": {
    "color": "#161617",
    "theme": "dark"
  },
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "wysiwyg",
    "notion",
    "block-editor",
    "md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wolfdavo/SlashMD"
  },
  "bugs": {
    "url": "https://github.com/wolfdavo/SlashMD/issues"
  },
  "homepage": "https://slashmd.dev",
  "license": "MIT",
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "customEditors": [
      {
        "viewType": "slashmd.editor",
        "displayName": "SlashMD — Block-Based Markdown",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "slashmd.openAsText",
        "title": "Open as Raw Markdown",
        "category": "SlashMD",
        "icon": {
          "light": "media/code-light.svg",
          "dark": "media/code-dark.svg"
        }
      },
      {
        "command": "slashmd.openAsSlashMD",
        "title": "Open as SlashMD",
        "category": "SlashMD",
        "icon": {
          "light": "media/blocks-light.svg",
          "dark": "media/blocks-dark.svg"
        }
      },
      {
        "command": "slashmd.copyContent",
        "title": "Copy Markdown Content",
        "category": "SlashMD",
        "icon": {
          "light": "media/copy-light.svg",
          "dark": "media/copy-dark.svg"
        }
      },
      {
        "command": "slashmd.insertBlock",
        "title": "Insert Block…",
        "category": "SlashMD"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "slashmd.copyContent",
          "when": "activeCustomEditorId == slashmd.editor",
          "group": "navigation"
        },
        {
          "command": "slashmd.openAsText",
          "when": "activeCustomEditorId == slashmd.editor",
          "group": "navigation"
        },
        {
          "command": "slashmd.copyContent",
          "when": "resourceLangId == markdown && activeCustomEditorId != slashmd.editor",
          "group": "navigation"
        },
        {
          "command": "slashmd.openAsSlashMD",
          "when": "resourceLangId == markdown && activeCustomEditorId != slashmd.editor",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "SlashMD",
      "properties": {
        "slashmd.assets.folder": {
          "type": "string",
          "default": "assets",
          "description": "Relative folder for pasted/dragged images."
        },
        "slashmd.format.wrap": {
          "type": "integer",
          "default": 0,
          "description": "Markdown wrap width (0 = no wrap)."
        },
        "slashmd.callouts.style": {
          "type": "string",
          "enum": [
            "admonition",
            "emoji"
          ],
          "default": "admonition",
          "description": "Style for callout blocks."
        },
        "slashmd.toggles.syntax": {
          "type": "string",
          "enum": [
            "details",
            "list"
          ],
          "default": "details",
          "description": "Syntax for toggle blocks."
        },
        "slashmd.math.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable math block support."
        },
        "slashmd.mermaid.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Mermaid diagram support."
        },
        "slashmd.theme.codeTheme": {
          "type": "string",
          "enum": [
            "auto",
            "dark",
            "light",
            "github-dark",
            "github-light",
            "monokai"
          ],
          "default": "auto",
          "description": "Syntax highlighting theme for code blocks. 'auto' follows your VS Code theme.",
          "enumDescriptions": [
            "Automatically match your VS Code theme (dark or light)",
            "Dark theme (VS Code Dark+)",
            "Light theme (VS Code Light+)",
            "GitHub Dark theme",
            "GitHub Light theme",
            "Monokai theme"
          ]
        },
        "slashmd.theme.headingColor": {
          "type": "string",
          "default": "",
          "description": "Custom color for all headings. Can be overridden per level with h1Color through h5Color."
        },
        "slashmd.theme.h1Color": {
          "type": "string",
          "default": "",
          "description": "Custom color for H1 headings. Overrides headingColor for H1."
        },
        "slashmd.theme.h2Color": {
          "type": "string",
          "default": "",
          "description": "Custom color for H2 headings. Overrides headingColor for H2."
        },
        "slashmd.theme.h3Color": {
          "type": "string",
          "default": "",
          "description": "Custom color for H3 headings. Overrides headingColor for H3."
        },
        "slashmd.theme.h4Color": {
          "type": "string",
          "default": "",
          "description": "Custom color for H4 headings. Overrides headingColor for H4."
        },
        "slashmd.theme.h5Color": {
          "type": "string",
          "default": "",
          "description": "Custom color for H5 headings. Overrides headingColor for H5."
        },
        "slashmd.theme.h1Indent": {
          "type": "string",
          "default": "",
          "description": "Left indent for H1 headings (e.g., '16px' or '1em')."
        },
        "slashmd.theme.h2Indent": {
          "type": "string",
          "default": "",
          "description": "Left indent for H2 headings (e.g., '16px' or '1em')."
        },
        "slashmd.theme.h3Indent": {
          "type": "string",
          "default": "",
          "description": "Left indent for H3 headings (e.g., '32px' or '2em')."
        },
        "slashmd.theme.h4Indent": {
          "type": "string",
          "default": "",
          "description": "Left indent for H4 headings (e.g., '48px' or '3em')."
        },
        "slashmd.theme.h5Indent": {
          "type": "string",
          "default": "",
          "description": "Left indent for H5 headings (e.g., '64px' or '4em')."
        },
        "slashmd.theme.boldColor": {
          "type": "string",
          "default": "",
          "description": "Custom color for bold text (e.g., '#d19a66' or 'orange'). Leave empty to use default."
        },
        "slashmd.theme.italicColor": {
          "type": "string",
          "default": "",
          "description": "Custom color for italic text (e.g., '#98c379' or 'green'). Leave empty to use default."
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/extension.ts --format cjs --dts --outDir dist --external vscode",
    "dev": "tsup src/extension.ts --format cjs --watch --outDir dist --external vscode",
    "lint": "eslint src",
    "package": "rm -rf .vsce-pkg && mkdir -p .vsce-pkg && cp -r package.json LICENSE README.md dist media .vsce-pkg/ && rm -f .vsce-pkg/dist/*.map && cd .vsce-pkg && vsce package --no-dependencies -o ../slashmd.vsix && cd .. && rm -rf .vsce-pkg",
    "publish": "npm run package && vsce publish --packagePath slashmd.vsix",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "zod": "^4.1.13"
  }
}
